# Application
APP_NAME="Persian Social Analytics"
APP_VERSION="1.0.0"
DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production-use-long-random-string
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database - PostgreSQL (overridden in docker-compose)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/persian_analytics
DATABASE_SYNC_URL=postgresql://postgres:postgres@postgres:5432/persian_analytics

# Redis (overridden in docker-compose)
REDIS_URL=redis://redis:6379/0

# BRAIN Service (RAPIDS Docker - external)
BRAIN_SERVICE_URL=http://persian_analytics_brain:8001
BRAIN_SERVICE_TIMEOUT=300

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]

# Celery (overridden in docker-compose)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

